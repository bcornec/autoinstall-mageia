[Unit]
Description=Mageia autoinstall at first boot
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
# Build by auto_inst
# Patch to allow service to always start after network
ExecStartPre=/bin/bash -c '(while !ping -c1 -w{{ MGADNS1 }} 2>/dev/null; do echo "waiting for network availability..."; sleep 1; done); echo "network up online!"'
ExecStart=/usr/local/bin/autoinstall-mageia
User={{ MGAADMININS }}
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
