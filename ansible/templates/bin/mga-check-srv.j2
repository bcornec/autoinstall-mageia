#!/bin/bash
#
set -e
set -u
set -o pipefail

# Check conformity of the server

# Get needed variables build at install
source {{ MGALOCAL }}/bin/mageia.sh
if [ -f {{ MGALOCAL }}/autoinstall/mageia.sh ]; then
	source {{ MGALOCAL }}/autoinstall/mageia.sh
fi
LAUNCHUSER=`id -u -n`
if [ _"$LAUNCHUSER" != _"{{ MGAUSER }}" ]; then
	echo "This script should be launched as user {{ MGAUSER }}"
	exit -1
fi

cd $MGAANSIBLEDIR

#git remote update
#git rebase 
CMD="ansible-playbook -i inventory --limit $MGAPBKDIR $MGAANSPLAYOPT check_$MGATYPE.yml"
echo "Executing $CMD"
$CMD
